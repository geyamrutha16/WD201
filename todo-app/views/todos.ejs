<div class="todo-sections">
    <!-- Overdue Section -->
    <section class="overdue-section">
        <h5>Overdue <span id="count-overdue">
                <%= overdue.length %>
            </span></h5>
        <ul>
            <% overdue.forEach(todo=> { %>
                <li class="Todo-Item">
                    <input type="checkbox" id="todo-<%= todo.id %>"
                        onchange="updateTodoStatus('<%= todo.id %>', this.checked)" <%=todo.completed ? 'checked' : ''
                        %>>
                    <label for="todo-<%= todo.id %>">
                        <%= todo.title %>
                    </label>
                    <span class="due-date">
                        <%= todo.dueDate %>
                    </span>
                    <button class="delete-btn" onclick="deleteTodo('<%= todo.id %>')">Delete</button>
                </li>
                <% }); %>
        </ul>
    </section>

    <!-- Due Today Section -->
    <section class="due-today-section">
        <h5>Due Today <span id="count-due-today">
                <%= dueToday.length %>
            </span></h5>
        <ul>
            <% dueToday.forEach(todo=> { %>
                <li class="Todo-Item">
                    <input type="checkbox" id="todo-<%= todo.id %>"
                        onchange="updateTodoStatus('<%= todo.id %>', this.checked)" <%=todo.completed ? 'checked' : ''
                        %>>
                    <label for="todo-<%= todo.id %>">
                        <%= todo.title %>
                    </label>
                    <button class="delete-btn" onclick="deleteTodo('<%= todo.id %>')">Delete</button>
                </li>
                <% }); %>
        </ul>
    </section>

    <!-- Due Later Section -->
    <section class="due-later-section">
        <h5>Due Later <span id="count-due-later">
                <%= dueLater.length %>
            </span></h5>
        <ul>
            <% dueLater.forEach(todo=> { %>
                <li class="Todo-Item">
                    <input type="checkbox" id="todo-<%= todo.id %>"
                        onchange="updateTodoStatus('<%= todo.id %>', this.checked)" <%=todo.completed ? 'checked' : ''
                        %>>
                    <label for="todo-<%= todo.id %>">
                        <%= todo.title %>
                    </label>
                    <span class="due-date">
                        <%= todo.dueDate %>
                    </span>
                    <button class="delete-btn" onclick="deleteTodo('<%= todo.id %>')">Delete</button>
                </li>
                <% }); %>
        </ul>
    </section>

    <!-- Completed Section -->
    <section class="completed-section">
        <h5>Completed Items <span id="count-completed">
                <%= completed.length %>
            </span></h5>
        <ul>
            <% completed.forEach(todo=> { %>
                <li class="Todo-Item">
                    <input type="checkbox" id="todo-<%= todo.id %>"
                        onchange="updateTodoStatus('<%= todo.id %>', this.checked)" checked>
                    <label for="todo-<%= todo.id %>">
                        <%= todo.title %>
                    </label>
                    <span class="due-date">
                        <%= todo.dueDate %>
                    </span>
                    <button class="delete-btn" onclick="deleteTodo('<%= todo.id %>')">Delete</button>
                </li>
                <% }); %>
        </ul>
    </section>
</div>

<script>
    function updateTodoStatus(id, completed) {
        fetch(`/todos/${id}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
                'CSRF-Token': '<%= csrfToken %>'
            },
            body: JSON.stringify({ completed })
        })
            .then(response => {
                if (response.ok) {
                    window.location.reload();
                }
            })
            .catch(error => console.error('Error:', error));
    }

    function deleteTodo(id) {
        if (confirm('Are you sure you want to delete this task?')) {
            fetch(`/todos/${id}`, {
                method: 'DELETE',
                headers: {
                    'CSRF-Token': '<%= csrfToken %>'
                }
            })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    }
                })
                .catch(error => console.error('Error:', error));
        }
    }
</script>